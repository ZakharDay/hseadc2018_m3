<%= form_with(model: [@category, @product, product_item], local: true) do |form| %>
  <% if product_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_item.errors.count, "error") %> prohibited this product_item from being saved:</h2>

      <ul>
        <% product_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :color_id %>
    <%= form.select :color_id, @product.colors.collect { |c| [c.name, c.id] } %>
  </div>

  <div class="field">
    <%= form.label :serial_number %>
    <%= form.text_field :serial_number, value: product_item.persisted? ? product_item.serial_number : SecureRandom.uuid %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
